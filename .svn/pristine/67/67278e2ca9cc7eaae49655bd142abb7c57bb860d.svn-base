CC = g++
LD = g++

CFLAGS = -I/usr/include/irrlicht -std=c++11
LDFLAGS = -lIrrlicht

OBJECTS = BathyData.o BathyGraph.o BMApp.o Graphics.o helper_functions.o main.o Receiver.o

all: BathyEditor

BathyEditor: $(OBJECTS)
	$(LD) -o BathyEditor.x *.o $(LDFLAGS)

%.o: %.cpp
	$(CC) -c $^ -o $@ $(CFLAGS)

clean:
	rm -rf BathyEditor.x *.o
